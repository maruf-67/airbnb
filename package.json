		"@types/multer": "^2.0.0",
		"@types/node": "^24.10.2",
		"@types/supertest": "^6.0.3",
		"@types/uuid": "^11.0.0",
		"cross-env": "^10.1.0",
		"nodemon": "^3.1.11",
		"supertest": "^7.1.4",
		"tailwindcss": "^4.1.17",
		"ts-node": "^10.9.2",
		"tsx": "^4.21.0",
		"typescript": "^5.9.3"
	}
