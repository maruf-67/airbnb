		"bcryptjs": "^3.0.3",
		"cookie-parser": "^1.4.7",
		"cors": "^2.8.5",
		"dotenv": "^17.2.3",
		"ejs": "^3.1.10",
		"express": "^5.2.1",
		"helmet": "^8.1.0",
		"http-errors": "^2.0.1",
		"jsonwebtoken": "^9.0.3",
		"mongoose": "^8.20.2",
		"morgan": "^1.10.1",
		"multer": "^2.0.2",
		"uuid": "^13.0.0",
		"zod": "^4.1.13"
	},
	"devDependencies": {
		"@types/bcryptjs": "^3.0.0",
		"@types/cookie-parser": "^1.4.10",
