{
	"name": "air-bnb-clone-backend",
	"type": "module",
	"private": true,
	"scripts": {
		"start": "node dist/app.js",
		"dev": "nodemon --exec tsx src/app.ts",
		"build": "tsc",
		"seed": "tsx src/seeders/index.ts",
